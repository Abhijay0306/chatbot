{
    "version": 2,
    "functions": {
        "api/index.js": {
            "maxDuration": 60,
            "memory": 1024,
            "includeFiles": "src/**,data/index/**,data/sample_catalog.json,data/product_catalog.json"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/documents/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}