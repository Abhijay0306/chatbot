{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb",
                "supportsResponseStreaming": true,
                "maxDuration": 60,
                "memory": 1024
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/documents/(.*)",
            "destination": "/api/index.js"
        }
    ],
    "outputDirectory": "public"
}