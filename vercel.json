{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb",
                "supportsResponseStreaming": true
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/documents/(.*)",
            "destination": "/api/index.js"
        }
    ],
    "outputDirectory": "public",
    "functions": {
        "api/index.js": {
            "maxDuration": 60,
            "memory": 1024
        }
    }
}